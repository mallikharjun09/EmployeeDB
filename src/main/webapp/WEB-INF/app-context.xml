<tx:annotation-driven transaction-manager="tm"/>

<bean id="tm" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
   <property name="sessionFactory" ref="sessionFactory"/>
</bean>

<bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
     <property name="dataSource" ref="dataSource"/>
     <property name="annotatedClasses">
        <list>
           <value>com.mylcat.domain.Employee</value>
           <value>com.mylcat.domain.Role</value>
           <value>com.mylcat.domain.Department</value>
        </list>
     </property>
     <property name="hibernateProperties">
         <props>
             <prop key="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</prop>
             <prop key="hibernate.show_sql">true</prop>
             <prop key="hibernate.hbm2ddl.auto">update</prop>
         </props>
     </property>
</bean>

<bean id="employeeDao" class="com.mylcat.dao.EmployeeDao">
    <property name="sessionFactory" ref="sessionFactory"/>
</bean>

<bean id="employeeService" class="com.mylcat.services.EmployeeService">
     <property name="employeeDao" ref="employeeDao"/>
</bean>

<bean id="roleDao" class="com.mylcat.dao.RoleDao">
    <property name="sessionFactory" ref="sessionFactory"/>
</bean>

<bean id="roleService" class="com.mylcat.services.RoleService">
     <property name="roleDao" ref="roleDao"/>
</bean>

<bean id="departmentDao" class="com.mylcat.dao.DepartmentDao">
    <property name="sessionFactory" ref="sessionFactory"/>
</bean>

<bean id="departmentService" class="com.mylcat.services.DepartmentService">
     <property name="departmentDao" ref="departmentDao"/>
</bean>

</beans>